<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:strokeWidth="1dp"
        android:layout_marginBottom="7dp"
        app:strokeColor="@color/orange">

        <ImageView
            android:id="@+id/p_teach_img"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/perfect"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="#E4020032"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/p_teach_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@id/layout"
                    android:ellipsize="end"
                    android:fontFamily="cursive"
                    android:maxLines="1"
                    android:text="Relationship"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p_teach_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/p_teach_topic"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@id/layout"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="2"
                    android:text="Relationship"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p_teach_vs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/p_teach_sub"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="2"
                    android:text="Relationship"
                    android:textColor="@color/orange"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignTop="@id/p_teach_topic"
                    android:layout_alignBottom="@id/p_teach_sub"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:id="@+id/p_teach_loves"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/love"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/p_teach_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15k"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/red"
                        android:textSize="15sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/p_teach_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/p_teach_vs"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="7dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/lorem"
                    android:textColor="@color/white" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
        
    </com.google.android.material.card.MaterialCardView>
    

</LinearLayout>