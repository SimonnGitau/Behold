<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeWidth="1dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/blue"
            android:layout_marginEnd="5dp">

            <ImageView
                android:id="@+id/event_flyer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/perfect"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_gravity="bottom"
                app:cardBackgroundColor="#CB020032">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:background="#00FFFFFF">

                    <TextView
                        android:id="@+id/event_dt_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="13 September 2022 10:00am"
                        android:fontFamily="serif-monospace"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/event_tt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inner Peace"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange"/>

                    <TextView
                        android:id="@+id/event_vnu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CCI - Nairobi"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/int_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Interested: "
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/event_int"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/int_txt"
                            android:text="..."
                            android:textColor="@color/orange"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/coming_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Going: "
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/event_int"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/event_com"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/coming_txt"
                            android:text="..."
                            android:textColor="@color/orange"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_eve_int"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cornerRadius="15dp"
                        app:strokeColor="@color/blue"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:strokeWidth="1dp"
                        android:textColor="@color/blue"
                        app:backgroundTint="@color/white"
                        android:text="About Event"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

</LinearLayout>