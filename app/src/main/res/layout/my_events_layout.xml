<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/eve_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="1dp"
        android:layout_marginBottom="5dp"
        app:strokeColor="@color/violet"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/p_event_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:maxHeight="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pray"
                app:riv_corner_radius_bottom_left="10dp"
                app:riv_corner_radius_bottom_right="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#CE020032"
                android:orientation="vertical"
                android:layout_alignBottom="@id/p_event_img">

                <TextView
                    android:id="@+id/p_event_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 September 2022 10:00AM"
                    android:textColor="@color/white"
                    android:fontFamily="monospace"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/p_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HEALING PROCESS"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/p_event_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KICC"
                    android:textColor="@color/white"
                    android:fontFamily="monospace"
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/int_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interested: "
                        android:layout_alignParentStart="true"
                        android:textColor="@color/white"
                        android:fontFamily="monospace"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/int_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="352"
                        android:layout_toEndOf="@id/int_txt"
                        android:textColor="@color/orange"
                        android:fontFamily="monospace"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/coming_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming: "
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/int_count"
                        android:textColor="@color/white"
                        android:fontFamily="monospace"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/com_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/coming_txt"
                        android:fontFamily="monospace"
                        android:text="300"
                        android:textColor="@color/orange"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>